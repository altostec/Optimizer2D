@model PostOptimizer.Pages.Projects.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Project Details</h2>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Project.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Project.OriginalFileName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.OriginalFileName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Project.FileSize)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.FileSize)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Project.UploadDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.UploadDate)
        </dd>
    </dl>

    <h3>Optimizations Pass</h3>
    <table class="table">
        <thead>
            <tr>                
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Optimizations[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Optimizations[0].Pass)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].Profits)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].Transations)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].ProfitFactor)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].ExpectedPayoff)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].BalanceDrawDown)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].RelativeDrawDown)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].InputParameter1)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].InputParameter2)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].InputParameter3)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Optimizations[0].InputParameter4)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Optimizations)
            {
            <tr>
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profits)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Transations)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ProfitFactor)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ExpectedPayoff)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.BalanceDrawDown)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.RelativeDrawDown)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.InputParameter1)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.InputParameter2)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.InputParameter3)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.InputParameter4)
                </td>
            </tr>
            }
        </tbody>
    </table>
    <form method="post">
        <input type="hidden" asp-for="Project.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Project.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
